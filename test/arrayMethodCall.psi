dat Cell{
    x : ℝ;
    def Cell(x : ℝ){
        this.x = x;
    }
    def inc(i){
        x = x + i;
    }
}

def main(){
    a := [Cell(0),Cell(10)];
    for i in [0..2){
        a[uniformInt(0,1)].inc(1);
    }
    return a[0]; // expected: 1/2·δ({.x ↦ 1})[r₁]+1/4·δ({.x ↦ 0})[r₁]+1/4·δ({.x ↦ 2})[r₁]
}
