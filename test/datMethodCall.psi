dat Counter{
    x:ℝ;
    def Counter(){
        this.x = 0;
    }
    def foo(){
        this.x += 1;
        return ();
    }
}

def main(){
    c := Counter();
    for i in [0..10){
        if flip(1/2){ c.foo(); }
    }
    return c; // expected: 105·δ_c[{.x ↦ 4}]·⅟512+105·δ_c[{.x ↦ 6}]·⅟512+15·δ_c[{.x ↦ 3}]·⅟128+15·δ_c[{.x ↦ 7}]·⅟128+45·δ_c[{.x ↦ 2}]·⅟1024+45·δ_c[{.x ↦ 8}]·⅟1024+5·δ_c[{.x ↦ 1}]·⅟512+5·δ_c[{.x ↦ 9}]·⅟512+63·δ_c[{.x ↦ 5}]·⅟256+δ_c[{.x ↦ 0}]·⅟1024+δ_c[{.x ↦ 10}]·⅟1024
}
