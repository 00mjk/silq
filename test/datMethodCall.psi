dat Counter{
    x:ℝ;
    def Counter(){
        this.x = 0;
    }
    def foo(){
        this.x += 1;
        return ();
    }
}

def main(){
    c := Counter();
    for i in [0..10){
        if flip(1/2){ c.foo(); }
    }
    return c; // expected: 105/512·δ_c[{.x ↦ 4}]+105/512·δ_c[{.x ↦ 6}]+15/128·δ_c[{.x ↦ 3}]+15/128·δ_c[{.x ↦ 7}]+45/1024·δ_c[{.x ↦ 2}]+45/1024·δ_c[{.x ↦ 8}]+5/512·δ_c[{.x ↦ 1}]+5/512·δ_c[{.x ↦ 9}]+63/256·δ_c[{.x ↦ 5}]+δ_c[{.x ↦ 0}]·⅟1024+δ_c[{.x ↦ 10}]·⅟1024
}
